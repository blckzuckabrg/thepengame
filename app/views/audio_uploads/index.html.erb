<p id="notice"><%= notice %></p>

<h1>Listing Audio Uploads</h1>

<table>
  <thead>
    <tr>
      <th>Artist Name</th>
      <th>Track Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @audio_uploads.each do |audio_upload| %>
      <tr>
        <td><%= audio_upload.artist_name %></td>
        <td><%= audio_upload.track_name %></td>
        <td><%= audio_upload.user.email if audio_upload.user %></td>
        <td><%= link_to 'Show', audio_upload %></td>
        <% if audio_upload.user == current_user %>
        <td><%= link_to 'Edit', edit_audio_upload_path(audio_upload) %></td>
        <td><%= link_to 'Destroy', audio_upload, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Audio Upload', new_audio_upload_path %>
<% end %>
